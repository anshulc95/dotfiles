alias ycc='rm -rf /tmp/yaourt-tmp-anshul/*'

alias gs='git status -sb'
alias gl='git log --pretty=format:"%h - %an, %ar : %s"'

alias tri="tree -I '*env|*.egg*|__pycache__'"
alias pytcov='py.test --cov-report term-missing --cov=exch tests'
alias remcache='find . | grep -E "(__pycache__|\.pyc|\.pyo$)" | xargs rm -rf'

