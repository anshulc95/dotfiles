alias ls='ls --color=auto'
alias ll='ls -l -a'

alias vv='vim ~/.vimrc'
alias vi='vim ~/.i3/config'
alias vz='vim ~/.zshrc'
alias vza='vim ~/.zsh_aliases'
alias vx='vim ~/.Xdefaults'

alias dd='cd ~/Downloads'
alias e='exit'
alias c='clear'
alias t='touch'
alias x='startx'
alias md='mkdir'
alias r='ranger'

alias gtkcc='gcc `pkg-config --cflags gtk+-3.0 pkg-config --libs gtk+-3.0`'
alias gmm='g++ `pkg-config gtkmm-2.4 --cflags --libs`'

alias pacin='sudo pacman -S'
alias pacrem='sudo pacman -Rns'
alias pacc='sudo pacman -Scc'		#Clean cache
alias pacupg='sudo pacman -Syu'
alias pacdl='sudo pacman -Sw'
alias pacins='sudo pacman -U --asdeps'
alias pacser='sudo pacman -Ss'

alias gs='cd ~/dotfiles/ && git status'
