# Colours
# bar bg
set $bg #1d1f21
# focused
set $fg #c5c8c5

set $red #cc6666
set $blue #81a2be
set $cyan #689d6a
set $grey #282a2e
set $yellow #b57614
set $orange #f99157
set $green #98971a
set $magenta #8f3f71

# window
set $wb #fdf6e3

bar {
    strip_workspace_numbers yes
	status_command i3status
	position bottom
	#font -misc-tamsyn.icons-medium-*-normal-*-14-*-*-*-*-*-iso8859-*
	font xft: Ohsnap 10
	#mode hide
    
colors {
	    background $bg
        statusline $wb
			                #BORDER 	#BACKGROUND #TEXT
		focused_workspace   $fg     	$fg      	$bg
		inactive_workspace  $bg     	$bg         $fg
		urgent_workspace    $blue 		$blue 		$bg
    }
}


#class                      border   	bg  		text
client.focused              $red     	$red     	$bg
client.focused_inactive     $grey 		$grey 		$fg
client.unfocused            $grey 		$grey  		$fg
client.urgent               $red	 	$red		$bg
client.background           #161616

# Assign apps to workspaces
assign [class="Firefox"] $WS3
assign [class="Vlc"] $WS4
assign [class="Gimp"] $WS10
assign [class="Clementine"] $WS4
assign [class="qpdfview"] $WS9
assign [class="Pcmanfm"] $WS2

gaps inner 10
gaps outer 5

